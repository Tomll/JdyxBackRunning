<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112px"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px"
        android:text="云 行 运 营"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relative_editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:layout_marginTop="681px" >

        <ImageView
            android:id="@+id/imageView_uname"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@drawable/uname" />

        <EditText
            android:id="@+id/edit_umane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_uname"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_toRightOf="@id/imageView_uname"
            android:background="@null"
            android:hint="输入账号"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative_editName"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:layout_marginTop="36px"
        android:background="@color/lightgrey" />

    <RelativeLayout
        android:id="@+id/relative_editPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:layout_marginTop="66px" >

        <ImageView
            android:id="@+id/imageView_pwd"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@drawable/pwd" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_pwd"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/imageView_pwd"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/devide2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative_editPwd"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:layout_marginTop="36px"
        android:background="@color/lightgrey" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/devide2"
        android:layout_below="@id/devide2"
        android:layout_marginTop="45px"
        android:button="@null"
        android:drawableLeft="@drawable/selector_checkbox"
        android:text=" 记住密码"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="683px"
        android:layout_height="131px"
        android:layout_below="@+id/checkBox1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:background="@drawable/shape_fill_blue"
        android:onClick="onClick"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>

