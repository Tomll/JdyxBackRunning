<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="网        点："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_node"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@drawable/spinner_back"
                android:clickable="true"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingRight="50dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="设备类型："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_device_type"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@drawable/spinner_back"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingRight="50dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="设备位置："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_device_loc"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@drawable/spinner_back"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingRight="50dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="设备编号："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_device_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60px"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="异常类型："
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_device_exception_type"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@drawable/spinner_back"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingRight="50dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="异常描述："
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_device_exception_detail"
            android:layout_width="match_parent"
            android:layout_height="561px"
            android:gravity="start"
            android:hint="请输入....（100字以内）"
            android:lineSpacingMultiplier="1.2"
            android:maxLength="100"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="144px" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="照片拍摄：（最多8张）"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="438px"
            android:horizontalSpacing="15px"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="15px" >
        </GridView>

        <Button
            android:id="@+id/button_sub_exception"
            android:layout_width="621px"
            android:layout_height="120px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30px"
            android:layout_marginTop="90px"
            android:background="@drawable/shape_fill_blue"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>