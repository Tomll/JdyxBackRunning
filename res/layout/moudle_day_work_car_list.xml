<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="0"
        android:background="@color/greyline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="261px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15px"
        android:paddingLeft="81px"
        android:paddingRight="75px"
        android:paddingTop="15px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:clickable="false"
                android:drawableLeft="@drawable/selector_checkbox"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="50px" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京 Q12345 B3-A区-12车位" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="252px"
                android:layout_height="120px"
                android:layout_marginLeft="50px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/lock_window2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="66px"
                android:layout_toLeftOf="@+id/imageView2"
                android:src="@drawable/lock_door2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="66px"
                android:layout_toLeftOf="@+id/imageView3"
                android:src="@drawable/open_door2" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyline" />

</LinearLayout>